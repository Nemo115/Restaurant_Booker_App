<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant_Booker_App.TableBookingRegistrationPage">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,10">
            <Entry x:Name="tableRegistrationNameEntry" Placeholder="Name" HeightRequest="50"/>
            <Entry x:Name="tableRegistrationPhoneEntry" Placeholder="Phone" HeightRequest="50" Margin="0,10,0,0"/>
            <ScrollView BackgroundColor="LightGray" HeightRequest="300" Margin="0,10,0,0">
                <StackLayout HorizontalOptions="Center" Margin="0,10,0,0">
                    <Label Text="Time of Arrival: "/>
                    <Label Text="Table Reserved: "/>
                </StackLayout>
            </ScrollView>
            <Button x:Name="bookingButton" Text="Book" BackgroundColor="LightBlue" HeightRequest="70" Opacity="0.68" Margin="0,10,0,0"
                    Clicked="bookingButton_Clicked"/>
            <Button x:Name="cancelButton" Text="Cancel" Clicked="cancelButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>